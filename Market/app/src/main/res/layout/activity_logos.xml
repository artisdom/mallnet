<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_logos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragments_color"
    tools:context="com.alameen.wael.hp.market.LogosActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logos_bar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/toolbar_layout" />

    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@+id/load_progress_logos"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppTheme.White"
        android:visibility="visible" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logos_bar"
        android:id="@+id/logos_recycler"
        android:scrollbars="vertical"
        android:padding="5dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
